html(lang="fr")
    head
        link(rel='stylesheet', href='../assets/font-awesome/css/font-awesome.min.css')
        block title
            title=todolist
    body
        h1.row Plopiplop !
        p.row Bienvenue chez Jean-Gilles !

        block append list
            p.row Jean-Gilles a dit, tu dois encore faire :
                ul
                    each todo, i in todolist
                        li
                            a(href="/todo/delete/" +i): i.fa.fa-times x
                            |  #{todo}
                            

        block append form                
            form(method="post", action="/todo/add")
                input#task(type="text", name="task")
                input(type="submit")            